<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"	
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="loan">
	<insert id="insertNewLoanData" parameterType="hashmap">
		INSERT INTO book_loan (book_no, member_no, return_date)
		VALUES (#{bookNo}, #{memberNo}, DATE_ADD(NOW(), INTERVAL 5 DAY))
	</insert>
	
	<select id="getLoanListByMemberNo" resultType="loanViewDTO" parameterType="int">
		SELECT * FROM book_loan_view WHERE member_no=#{memberNo}
	</select>
	<select id="getLoanMapListByMemberNo" resultType="hashmap" parameterType="int">
		SELECT * FROM book_loan_view WHERE member_no=#{memberNo}
	</select>
	
	<select id="getLoanByMemberNoAndBookNo" resultType="loanDTO" parameterType="hashmap">
		SELECT * FROM book_loan WHERE member_no=#{memberNo} AND book_no=#{bookNo}
	</select>
</mapper>